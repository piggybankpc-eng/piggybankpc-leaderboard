# ========================================
# PiggyBankPC Leaderboard - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ========================================
# SECURITY KEYS (REQUIRED - CHANGE THESE!)
# ========================================

# Flask secret key for sessions/cookies
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY-USE-GENERATOR-ABOVE

# Benchmark security key for file signing
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
BENCHMARK_SECURITY_KEY=CHANGE-THIS-TO-ANOTHER-RANDOM-KEY-DIFFERENT-FROM-ABOVE

# ========================================
# FLASK CONFIGURATION
# ========================================

FLASK_ENV=production
FLASK_APP=app.py

# ========================================
# DATABASE CONFIGURATION
# ========================================

# SQLite (default - good for small/medium sites)
DATABASE_URL=sqlite:///instance/database.db

# PostgreSQL (recommended for production at scale)
# DATABASE_URL=postgresql://username:password@localhost:5432/piggybankpc

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
# For sending notification emails to users

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# ========================================
# APPLICATION SETTINGS
# ========================================

# Domain where your site is hosted
DOMAIN=piggybankpc.uk

# Maximum upload file size (in MB)
MAX_UPLOAD_SIZE=10

# ========================================
# ANALYTICS & MONETIZATION
# ========================================

# Google Analytics tracking ID (optional)
GOOGLE_ANALYTICS_ID=

# Amazon Associate Tag (for affiliate links)
AMAZON_ASSOCIATE_TAG=piggybankpc-21

# ========================================
# SOCIAL MEDIA
# ========================================

YOUTUBE_CHANNEL=@piggybankpc
TWITTER_HANDLE=@piggybankpc
DISCORD_INVITE=

# ========================================
# DEVELOPMENT SETTINGS (Leave as-is for production)
# ========================================

PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
